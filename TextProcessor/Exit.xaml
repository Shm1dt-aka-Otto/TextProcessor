<Window x:Name="exit1" x:Class="TextProcessor.Exit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextProcessor"
        mc:Ignorable="d"
        Title="Предупреждение" Height="185" Width="260" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lUnsaved" Content="У вас есть несохраненные изменения." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lWantToSave" Content="Сохранить перед выходом?" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bSave" Content="Сохранить" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Width="224" Click="bSave_Click"/>
        <Button x:Name="bExit" Content="Выйти" HorizontalAlignment="Left" Margin="124,116,0,0" VerticalAlignment="Top" Width="110" Click="bExit_Click"/>
        <Button x:Name="bCancel" Content="Отмена" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Width="109.5" Click="bCancel_Click"/>
    </Grid>
</Window>
